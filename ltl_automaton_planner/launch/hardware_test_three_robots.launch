<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Arguments -->
  <arg name="initial_ts_state_from_agent" default="False"/>
<!--   <arg name="num_mobile" default=1/> -->
<!--   <arg name="num_quadruped" default=1/> -->

<!--   <arg name="rviz" default="true"/> -->

<!--   <param name="agent_name" type="string" value="$(arg agent_name)" /> -->
  <!-- hard and soft task parameters -->




  <!-- Run planner node -->
  <node name="ltl_global_planner" pkg="ltl_automaton_planner" type="central_planner_node_hardware.py" output="screen">
    <rosparam command="load" file="$(find ltl_automaton_planner)/config/ltl_formula_gtmi.yaml" />
    <param name="initial_ts_state_from_agent" type="bool" value="$(arg initial_ts_state_from_agent)" />
    <!-- Transition system for mobile robot-->
    <param name="transition_system_turtlebot_08_textfile" type="str" textfile="$(find ltl_automaton_planner)/config/ts_turtlebot_08_test.yaml" />

    <!-- Transition system for mobile robot-->
    <param name="transition_system_turtlebot_14_textfile" type="str" textfile="$(find ltl_automaton_planner)/config/ts_turtlebot_14_test.yaml" />

    <!-- Transition system for quadruped-->
    <param name="transition_system_mini_cheetah_textfile" type="str" textfile="$(find ltl_automaton_planner)/config/ts_mini_cheetah_test.yaml" />
  </node>


<!--   <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" -->
<!--         args="-d $(find unitree_navigate)/rviz/multi_robot_mocap.rviz -f map" -->
<!--         output="screen"/> -->


</launch>
